
 @model Hospital_Management.ViewModels.RecordViewModel

@{
    ViewData["Title"] = "Create Record";
}

<h1>Create Record</h1>

@* <form asp-action="CreateRecord" asp-controller="Shift" method="post">
 *@
<form action="/DoctorPortal/Doctor/CreateRecord"method="post">

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" name="Description" value="@Model?.Description" class="form-control" placeholder="Enter description here" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Diagnosis"></label>
        <input asp-for="Diagnosis" name="Diagnosis" value="@Model?.Diagnosis" class="form-control" placeholder="Enter diagnosis here" />
        <span asp-validation-for="Diagnosis" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Prescription"></label>
        <input asp-for="Prescription" name="Prescription" value="@Model?.Prescription" class="form-control" placeholder="Enter prescription here" />
        <span asp-validation-for="Prescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes"></label>
        <textarea asp-for="Notes" name="Notes" class="form-control" placeholder="Enter notes here">@Model?.Notes</textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date" name="Date" value="@Model?.Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="PatientId">Patient</label>
        <select name="PatientId" id="PatientId" class="form-control">
            <option value="">-- Select Patient --</option>
            @foreach (var patient in (IEnumerable<SelectListItem>)ViewData["Patients"])
            {
                <option value="@patient?.Value">@patient?.Text</option>
            }
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <input type="hidden" name="DoctorId" value="@Model?.DoctorId" asp-for="DoctorId" />

    <button type="submit" class="btn btn-primary">Create Record</button>
</form>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
