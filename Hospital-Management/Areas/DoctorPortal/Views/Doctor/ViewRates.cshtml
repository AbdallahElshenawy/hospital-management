@model IEnumerable<Hospital_Management.ViewModels.RateViewModel>

@{
    ViewData["Title"] = "View Rates";
}

<h1>Rates</h1>

<table class="table">
    <thead>
        <tr>
            <th>Value</th>
            <th>Comment</th>
            <th>Patient Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rate in Model)
        {
            <tr>
                <td>@rate.Value</td>
                <td>@rate.Comment</td>
                <td>@rate.PatientName</td>
            </tr>
        }
    </tbody>
</table>
