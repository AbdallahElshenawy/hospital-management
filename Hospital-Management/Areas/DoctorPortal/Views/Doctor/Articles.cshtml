@model IEnumerable<Hospital_Management.ViewModels.ArticleViewModel>

@{
    Layout = "_DoctorPortalLayout";
    ViewData["Title"] = "Articles";
}

<h1>Articles</h1>

<p>
    <a asp-action="CreateArticle" class="btn btn-primary">Create New Article</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td>@article.Content</td>
                <td>@article.DateTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="EditArticle" asp-route-id="@article.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteArticle" asp-route-id="@article.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
